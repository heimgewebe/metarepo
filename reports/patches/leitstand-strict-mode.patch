+import { env } from '$env/dynamic/private';
+import { readFileSync, existsSync } from 'node:fs';
+import path from 'node:path';
+
+// Zwingend in Production
+const STRICT_MODE = env.NODE_ENV === 'production' || env.OBSERVATORY_STRICT === '1';
+
+export function loadObservatoryData() {
+  const artifactPath = path.resolve('artifacts/knowledge.observatory.json');
+
+  // 1. Local Artifact (Priorität 1)
+  if (existsSync(artifactPath)) {
+    try {
+      const data = JSON.parse(readFileSync(artifactPath, 'utf-8'));
+      if (data && Object.keys(data).length > 0) {
+        return data;
+      }
+    } catch (e) {
+      console.error("Artifact found but invalid:", e);
+    }
+  }
+
+  // 2. Fetch (Optional runtime fallback, if implemented)
+  // ... (Code zum Fetchen, falls vorhanden)
+
+  // 3. Strict Mode Check
+  if (STRICT_MODE) {
+    console.error("STRICT MODE: No valid observatory artifact found. Failing build/start.");
+    // In Production darf kein Fallback auf Fixtures passieren.
+    // Wir werfen einen Fehler oder geben explizit NULL zurück, damit die UI "Leere" anzeigt.
+    // Ein "Fake-Objekt" ist verboten.
+    return null;
+  }
+
+  // 4. Fixture (Nur Dev)
+  console.warn("Dev Mode: Falling back to fixture.");
+  try {
+     // return import('../fixtures/knowledge.observatory.fixture.json');
+     // Oder dynamisches Laden
+     return JSON.parse(readFileSync('src/fixtures/knowledge.observatory.fixture.json', 'utf-8'));
+  } catch (e) {
+     return null;
+  }
+}
