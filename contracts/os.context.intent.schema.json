{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://heimgewebe/contracts/os.context.intent.schema.json",
  "title": "OS Context Intent (Light)",
  "type": "object",
  "properties": {
    "intent_id": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "intent_type": {
      "type": "string",
      "enum": [
        "coding",
        "writing",
        "research",
        "repo_browsing",
        "ci_triage",
        "unknown"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "kind": { "type": "string" },
          "ref": { "type": "string" },
          "weight": { "type": "number" }
        },
        "required": ["kind", "ref"]
      }
    },
    "source": {
      "type": "string"
    }
  },
  "required": [
    "intent_id",
    "generated_at",
    "intent_type",
    "confidence",
    "signals",
    "source"
  ],
  "additionalProperties": false
}
