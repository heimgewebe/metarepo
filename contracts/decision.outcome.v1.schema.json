{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/decision.outcome.v1.schema.json",
  "title": "hausKI decision outcome v1",
  "x-producers": ["hausKI"],
  "x-consumers": ["heimlern", "chronik"],
  "type": "object",
  "required": ["decision_id", "outcome", "ts"],
  "properties": {
    "decision_id": {
      "type": "string",
      "description": "ID der urspr√ºnglichen Entscheidung (policy.decision)."
    },
    "outcome": {
      "type": "string",
      "enum": ["success", "failure", "partial", "unknown"],
      "description": "Das Ergebnis der Entscheidung."
    },
    "success": {
      "type": "boolean",
      "description": "Explizites Success-Flag. Muss mit 'outcome' konsistent sein."
    },
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "Zeitpunkt des Ergebnisses."
    },
    "details": {
      "type": "string",
      "description": "Optionale Details zum Ergebnis."
    },
    "metrics": {
      "type": "object",
      "description": "Strukturierte Messwerte.",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": { "type": "number" }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "outcome": { "const": "success" } }
      },
      "then": {
        "properties": { "success": { "const": true } },
        "required": ["success"]
      }
    },
    {
      "if": {
        "properties": { "outcome": { "const": "failure" } }
      },
      "then": {
        "properties": { "success": { "const": false } },
        "required": ["success"]
      }
    },
    {
      "if": {
        "properties": { "outcome": { "enum": ["partial", "unknown"] } }
      },
      "then": {
        "not": { "required": ["success"] }
      }
    }
  ],
  "additionalProperties": false
}
