{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/decision.outcome.v1.schema.json",
  "title": "heimlern decision outcome v1",
  "x-producers": ["hausKI", "chronik"],
  "x-consumers": ["heimlern"],
  "type": "object",
  "required": ["decision_id", "outcome", "ts"],
  "properties": {
    "decision_id": {
      "type": "string",
      "description": "ID der ursprünglichen Entscheidung (policy.decision)."
    },
    "outcome": {
      "type": "string",
      "enum": ["success", "failure", "partial", "unknown"],
      "description": "Das Ergebnis der Entscheidung."
    },
    "success": {
      "type": "boolean",
      "description": "Explizites Success-Flag. Muss mit 'outcome' konsistent sein (true bei success, false bei failure)."
    },
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "Zeitpunkt des Ergebnisses."
    },
    "reward": {
      "type": "number",
      "description": "Numerischer Reward für Reinforcement Learning."
    },
    "context": {
      "type": "object",
      "description": "Kontext zum Zeitpunkt des Ergebnisses (State)."
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "details": {
      "type": "string"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "outcome": { "const": "success" } }
      },
      "then": {
        "properties": { "success": { "const": true } },
        "required": ["success"]
      }
    },
    {
      "if": {
        "properties": { "outcome": { "const": "failure" } }
      },
      "then": {
        "properties": { "success": { "const": false } },
        "required": ["success"]
      }
    }
  ],
  "additionalProperties": false
}
