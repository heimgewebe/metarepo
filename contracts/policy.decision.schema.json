{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/policy.decision.schema.json",
  "title": "heimlern decision",
  "x-producers": ["heimlern"],
  "x-consumers": ["hausKI", "chronik"],
  "type": "object",
  "required": ["action", "score", "why"],
  "properties": {
    "action": { "type": "string" },
    "score": { "type": "number" },
    "why": { "type": "string" },
    "context": { "type": "object" },
    "preimage_ref": {
      "type": "string",
      "minLength": 1,
      "description": "Optional: Referenz auf einen Erkenntnis-Vorlauf (decision.preimage), z. B. Preimage-ID oder chronik-Ref. Siehe ADR-0022."
    }
  },
  "additionalProperties": false
}
