{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/policy.weight_adjustment.v1.schema.json",
  "title": "heimlern policy weight adjustment proposal v1",
  "x-producers": ["heimlern"],
  "x-consumers": ["hausKI", "chronik"],
  "type": "object",
  "required": ["version", "basis_policy", "ts", "deltas", "confidence", "evidence"],
  "properties": {
    "version": {
      "type": "string",
      "const": "v1"
    },
    "basis_policy": {
      "type": "string",
      "description": "ID/Hash der Policy, auf der diese Anpassung basiert."
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "deltas": {
      "type": "object",
      "description": "Map von Policy-ID zu Delta-Wert (z.B. {'pol_A': 0.1, 'pol_B': -0.05}).",
      "patternProperties": {
        "^.+$": { "type": "number" }
      },
      "additionalProperties": false
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Konfidenz des Vorschlags (0.0 bis 1.0)."
    },
    "evidence": {
      "type": "object",
      "required": ["decisions_analyzed", "failure_rate_before"],
      "properties": {
        "decisions_analyzed": { "type": "integer", "minimum": 0 },
        "failure_rate_before": { "type": "number", "minimum": 0, "maximum": 1 },
        "failure_rate_after_sim": { "type": "number", "minimum": 0, "maximum": 1 },
        "simulation_method": { "type": "string" },
        "patterns": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "reasoning": {
      "type": "string",
      "description": "Erklärung für den Menschen."
    },
    "status": {
      "type": "string",
      "enum": ["proposed", "accepted", "rejected", "superseded"],
      "default": "proposed"
    }
  },
  "additionalProperties": false
}
