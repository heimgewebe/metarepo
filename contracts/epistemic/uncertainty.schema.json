{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/epistemic/uncertainty.schema.json",
  "title": "Epistemic Uncertainty",
  "type": "object",
  "required": ["id", "description", "status"],
  "properties": {
    "id": { "type": "string" },
    "description": { "type": "string" },
    "status": {
      "type": "string",
      "enum": [
        "discovered",
        "acknowledged",
        "deferred",
        "reframed",
        "reduced",
        "obsolete"
      ]
    },
    "related_events": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
