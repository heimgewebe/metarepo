{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/events/insights.daily.published.v1.schema.json",
  "title": "Insights Daily Published Event",
  "description": "Notification that a new daily insights artifact has been published.",
  "type": "object",
  "required": ["type", "source", "payload"],
  "properties": {
    "type": {
      "const": "insights.daily.published"
    },
    "source": {
      "type": "string",
      "description": "Producing system (e.g. semantAH)."
    },
    "payload": {
      "type": "object",
      "required": ["ts", "url", "generated_at"],
      "properties": {
        "ts": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Date of the published insights (YYYY-MM-DD)."
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Public URL to the published insights.daily.json artifact."
        },
        "generated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Exact generation timestamp of the artifact."
        },
        "schema_ref": {
          "type": "string",
          "format": "uri",
          "description": "Canonical URI of the schema used for validation."
        },
        "sha": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$",
          "description": "SHA256 checksum of the artifact content (format: sha256:<hex>)."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
