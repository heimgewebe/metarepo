{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/events/heimgeist.insight.v1.schema.json",
  "title": "Heimgeist Insight Event",
  "description": "Ein Insight-Event von Heimgeist (Meta-Analyse, Drift, Risiko).",
  "$comment": "INLINED SNAPSHOT (DRIFT WARNING): This schema inlines properties from base.event.schema.json to ensure robust validation (avoiding relative $ref issues). Any changes to the Base Event Envelope MUST be manually synchronized here.",
  "type": "object",
  "required": ["kind", "version", "id", "meta", "data"],
  "properties": {
    "kind": { "const": "heimgeist.insight" },
    "version": { "const": 1 },
    "id": {
      "type": "string",
      "pattern": "^evt-",
      "description": "Eindeutige Event-ID (Prefix 'evt-')"
    },
    "meta": {
      "type": "object",
      "required": ["producer", "occurred_at"],
      "properties": {
        "producer": {
          "type": "string",
          "description": "Rolle des Erzeugers/Persistierers (z.B. heimgeist, archivist)"
        },
        "occurred_at": {
          "type": "string",
          "format": "date-time",
          "description": "Zeitpunkt des Ereignisses (ISO8601)"
        },
        "schema_version": { "type": "string" },
        "idempotency_key": { "type": "string" }
      },
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "required": ["insight_type", "summary", "details"],
      "properties": {
        "insight_type": {
          "type": "string",
          "enum": ["risk", "drift", "pattern", "anomaly", "meta", "suggestion"],
          "description": "Kategorie"
        },
        "summary": { "type": "string" },
        "details": { "type": "string" },
        "context_refs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "origin": {
          "type": "object",
          "properties": {
            "role": { "type": "string" },
            "agent_id": { "type": "string" }
          },
          "additionalProperties": false
        },
        "self_state": {
          "$ref": "../../heimgeist/self_state.schema.json",
          "description": "Optionaler Meta-Snapshot zum Zeitpunkt der Einsicht."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
