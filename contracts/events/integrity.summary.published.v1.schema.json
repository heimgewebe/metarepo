{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.heimgewebe.org/contracts/events/integrity.summary.published.v1.schema.json",
  "title": "Integrity Summary Published Event",
  "description": "Event signaling that a new integrity summary artifact has been published.",
  "type": "object",
  "required": [
    "type",
    "source",
    "payload"
  ],
  "properties": {
    "type": {
      "const": "integrity.summary.published.v1"
    },
    "source": {
      "type": "string",
      "description": "Repo that published the summary."
    },
    "payload": {
      "type": "object",
      "required": [
        "url",
        "generated_at",
        "repo",
        "status"
      ],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL to the published integrity.summary.json artifact. May use 'urn:pending:url' or 'about:blank#pending' if the artifact is not yet stably published."
        },
        "generated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Generation timestamp of the artifact."
        },
        "repo": {
          "type": "string",
          "description": "Repository identifier that generated the summary."
        },
        "status": {
          "type": "string",
          "enum": [
            "OK",
            "WARN",
            "FAIL",
            "MISSING",
            "UNCLEAR"
          ],
          "description": "Aggregated integrity status of the repository."
        },
        "schema_ref": {
          "type": "string",
          "format": "uri",
          "description": "Canonical URI of the schema used for validation."
        },
        "sha": {
          "type": "string",
          "description": "SHA256 checksum of the artifact content."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
