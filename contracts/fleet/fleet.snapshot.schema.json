{
  "$id": "https://heimgewebe.de/contracts/fleet/fleet.snapshot.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fleet Snapshot",
  "type": "object",
  "required": ["schema_version", "status", "generated_at", "sources", "data"],
  "properties": {
    "schema_version": { "type": "string", "const": "fleet.snapshot.v1" },
    "status": { "type": "string", "enum": ["ok", "error", "warn"] },
    "generated_at": { "type": "string", "format": "date-time" },
    "validity": {
      "type": "object",
      "required": ["ttl_hours"],
      "properties": {
        "ttl_hours": { "type": "integer", "minimum": 1 },
        "outdated": { "type": "boolean" },
        "reason": { "type": "string" }
      },
      "additionalProperties": false
    },
    "sources": {
      "type": "object",
      "required": ["metarepo"],
      "properties": {
        "metarepo": {
          "type": "object",
          "required": ["path", "commit"],
          "properties": {
            "path": { "type": "string" },
            "commit": { "type": "string" }
          },
          "additionalProperties": false
        },
        "contracts_mirror": {
          "type": "object",
          "required": ["path", "commit"],
          "properties": {
            "path": { "type": "string" },
            "commit": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "required": ["repos"],
      "properties": {
        "repos": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["repo"],
            "properties": {
              "repo": { "type": "string" },
              "fleet_member": { "type": "boolean" },
              "role": { "type": "string" },
              "policy_tier": { "type": "string" },
              "wgx": {
                "type": "object",
                "properties": {
                  "profile_expected": { "type": ["boolean", "null"] }
                },
                "additionalProperties": true
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": false
    },
    "error": { "type": "string" }
  },
  "additionalProperties": false
}
