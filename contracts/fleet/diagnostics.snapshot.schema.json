{
  "$id": "https://heimgewebe.de/contracts/fleet/diagnostics.snapshot.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Diagnostics Snapshot",
  "type": "object",
  "required": ["schema_version", "status", "generated_at", "source_snapshot", "summary", "data"],
  "properties": {
    "schema_version": { "type": "string", "const": "diagnostics.snapshot.v1" },
    "status": { "type": "string", "enum": ["ok", "warn", "error"] },
    "generated_at": { "type": "string", "format": "date-time" },
    "source_snapshot": {
      "type": "object",
      "required": ["fleet_generated_at"],
      "properties": {
        "fleet_generated_at": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": false
    },
    "summary": {
      "type": "object",
      "required": ["ok", "issue", "missing", "issues_total"],
      "properties": {
        "ok": { "type": "integer", "minimum": 0 },
        "issue": { "type": "integer", "minimum": 0 },
        "missing": { "type": "integer", "minimum": 0 },
        "issues_total": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "data": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["status", "checks"],
        "properties": {
          "status": { "type": "string", "enum": ["ok", "issue", "missing"] },
          "role": { "type": "string" },
          "checks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["code", "severity", "message"],
              "properties": {
                "code": { "type": "string" },
                "severity": { "type": "string", "enum": ["info", "warn", "error"] },
                "message": { "type": "string" }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "error": { "type": "string" }
  },
  "additionalProperties": false
}
